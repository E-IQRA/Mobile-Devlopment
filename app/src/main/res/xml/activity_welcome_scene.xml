<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnClick
            android:id="@+id/btn_next"
            android:targetId="@id/btn_next" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            motion:layout_constraintTop_toBottomOf="@id/explainText1"
            android:layout_marginStart="144dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="32dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/welcome"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="350dp"
            android:layout_height="350dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" />
        <Constraint
            android:id="@+id/white_overlay"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/welcome"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/explainText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/welcomeText"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:elevation="1dp" />
        <Constraint
            android:id="@+id/welcomeText"
            android:elevation="1dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/welcome"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp" />
        <Constraint
            android:id="@+id/btn_next"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            motion:layout_constraintTop_toBottomOf="@id/menu1" motion:transitionEasing="linear"
            android:elevation="1dp" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@+id/start" >
        <Constraint
            android:id="@+id/welcome"
            android:layout_width="350dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="@id/guidelineHorizontal"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.3" />
        <Constraint
            android:id="@+id/welcomeText"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/explainText1"
            motion:layout_constraintTop_toBottomOf="@id/welcome"
            android:layout_marginTop="48dp"
            motion:layout_constraintVertical_bias="0.3"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/explainText1"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/btn_next"
            android:elevation="1dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@id/explainText1"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />
        <Constraint
            android:id="@+id/menu1"
            android:elevation="1dp"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            motion:layout_constraintTop_toBottomOf="parent"
            android:layout_marginStart="144dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            android:elevation="1dp"
            motion:layout_constraintEnd_toStartOf="@+id/menu3"
            motion:layout_constraintStart_toEndOf="@+id/menu1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            motion:layout_constraintBottom_toBottomOf="@+id/menu1"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/menu1"
            motion:layout_constraintHorizontal_bias="0.5">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/feature1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="350dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="@id/guidelineHorizontal"
            motion:layout_constraintStart_toStartOf="parent" motion:transitionEasing="linear"/>
        <Constraint
            android:id="@+id/featureText1"
            android:elevation="1dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/explainText2"
            motion:layout_constraintTop_toBottomOf="@id/feature1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp" motion:transitionEasing="linear" />
        <Constraint
            android:id="@+id/explainText2"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/featureText1" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/motion1"
        motion:deriveConstraintsFrom="@+id/end" />
    <ConstraintSet
        android:id="@+id/motion2"
        motion:deriveConstraintsFrom="@+id/motion1" />
</MotionScene>